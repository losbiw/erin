{
  "name": "erin",
  "description": "A simple way to automatically change wallpaper",
  "author": "Skorinov Vladislav <skorinov41@gmail.com>",
  "version": "2.1.2",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.13.16",
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@types/webpack": "^4.41.26",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.1.3",
    "css-minimizer-webpack-plugin": "^1.3.0",
    "electron": "^10.2.0",
    "electron-builder": "^22.9.1",
    "eslint": "^7.26.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.1",
    "jest": "^26.6.3",
    "mini-css-extract-plugin": "^1.3.9",
    "node-sass": "^5.0.0",
    "prettier": "^2.2.1",
    "raw-loader": "^4.0.2",
    "react-test-renderer": "^17.0.2",
    "sass-loader": "^11.0.1",
    "style-loader": "^2.0.0",
    "ts-jest": "^26.5.6",
    "ts-loader": "^8.0.18",
    "typescript": "^4.2.3",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^5.27.1",
    "webpack-bundle-analyzer": "^4.4.1",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "dotenv": "^8.2.0",
    "electron-updater": "^4.3.8",
    "node-fetch": "^2.6.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/losbiw/erin.git"
  },
  "homepage": "./",
  "main": "./build/main.js",
  "scripts": {
    "react-start": "webpack serve",
    "electron-start": "electron .",
    "react-build": "webpack --env NODE_ENV=production",
    "electron-tsc": "cd ./electron/ && tsc && echo typescript is transpiled successfully",
    "electron-compile": "yarn electron-tsc && webpack --config ./electron/webpack.config.main.js && yarn copy-env",
    "build": "yarn react-build && yarn electron-compile",
    "electron-release": "yarn build && electron-builder -mwl -p always",
    "build-win": "yarn build && electron-builder -w",
    "build-linux": "yarn build && electron-builder -l",
    "build-mac": "yarn build && electron-builder -m",
    "build-mwl": "yarn build && electron-builder -mwl",
    "copy-env": "cd ./electron && chflags nohidden .env && cp .env ../build/.env",
    "test": "jest --watchAll"
  },
  "build": {
    "appId": "com.erin.start",
    "artifactName": "erin.${ext}",
    "productName": "Erin",
    "extends": null,
    "extraResources": [
      {
        "from": "./electron/Wallpaper",
        "to": "./build/Wallpaper"
      },
      "**/assets/**"
    ],
    "files": [
      "build/**/*",
      "react-build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "target": "dmg"
    },
    "linux": {
      "desktop": {
        "StartupWMClass": "erin"
      },
      "target": [
        "deb",
        "rpm",
        "snap"
      ],
      "category": "Utility"
    }
  }
}
