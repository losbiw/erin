{
  "name": "erin",
  "description": "A simple way to automatically change wallpaper",
  "author": "Skorinov Vladislav <skorinov41@gmail.com>",
  "version": "2.1.1",
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "auto-launch": "^5.0.5",
    "customize-cra": "^1.0.0",
    "dotenv": "^8.2.0",
    "electron-updater": "^4.3.5",
    "node-fetch": "^2.6.1",
    "raw-loader": "^4.0.2",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-scripts": "3.4.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/losbiw/erin.git"
  },
  "homepage": "./",
  "main": "electron/main.js",
  "scripts": {
    "react-start": "react-app-rewired start",
    "react-build": "react-app-rewired build",
    "electron-start": "electron .",
    "electron-build": "electron-builder",
    "electron-release": "electron-builder -w -l -p always"  
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "config-overrides-path": "src/config/config-override.js",
  "devDependencies": {
    "electron": "^10.2.0",
    "electron-builder": "^22.9.1",
    "electron-debug": "^3.1.0",
    "react-app-rewired": "^2.1.6",
    "electron-log": "^4.3.0"
  },
  "build": {
    "appId": "com.erin.start",
    "artifactName": "erin.${ext}",
    "productName": "Erin",
    "extends": null,
    "extraResources": [
      "**/electron/Wallpaper/**",
      "**/assets/**"
    ],
    "files": [
      "electron/**/*",
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "target": "dmg"
    },
    "linux": {
      "desktop": {
        "StartupWMClass": "erin"
      },
      "target": [
        "deb",
        "rpm",
        "snap"
      ],
      "category": "Utility"
    }
  }
}
