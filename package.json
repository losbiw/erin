{
  "name": "erin",
  "description": "A simple way to automatically change wallpaper",
  "author": "Skorinov Vladislav <skorinov41@gmail.com>",
  "version": "2.1.1",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@types/webpack": "^4.41.26",
    "css-loader": "^5.1.3",
    "css-minimizer-webpack-plugin": "^1.3.0",
    "electron": "^10.2.0",
    "electron-builder": "^22.9.1",
    "electron-debug": "^3.1.0",
    "html-webpack-plugin": "^5.3.1",
    "mini-css-extract-plugin": "^1.3.9",
    "raw-loader": "^4.0.2",
    "ts-loader": "^8.0.18",
    "typescript": "^4.2.3",
    "webpack": "^5.27.1",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "dotenv": "^8.2.0",
    "electron-updater": "^4.3.8",
    "node-fetch": "^2.6.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/losbiw/erin.git"
  },
  "homepage": "./",
  "main": "electron/main.js",
  "scripts": {
    "react-start": "webpack serve",
    "react-build": "webpack -p",
    "electron-start": "electron .",
    "electron-build": "electron-builder",
    "electron-release": "electron-builder -mwl -p always"
  },
  "build": {
    "appId": "com.erin.start",
    "artifactName": "erin.${ext}",
    "productName": "Erin",
    "extends": null,
    "extraResources": [
      "**/electron/Wallpaper/**",
      "**/assets/**"
    ],
    "files": [
      "electron/**/*",
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "target": "dmg"
    },
    "linux": {
      "desktop": {
        "StartupWMClass": "erin"
      },
      "target": [
        "deb",
        "rpm",
        "snap"
      ],
      "category": "Utility"
    }
  }
}
